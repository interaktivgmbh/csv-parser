{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2021", "DOM"],
    "module": "CommonJS",
    "rootDir": "./src/",
    "declaration": true,
    "outDir": "./dist/",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}